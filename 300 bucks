using System;
using System.Collections.Generic;
namespace myProject {
    class Program {
        static void Main() {
            // Запрашиваем размер массива
            Console.Write("Введите размер массива: ");
            int size = Convert.ToInt32(Console.ReadLine());
            
            // Создаем массив заданного размера
            byte[] _myArray = new byte[size];
            
            // Создаем генератор случайных чисел
            Random rand = new Random();
            
            // Заполняем массив случайными числами от 1 до 100
            Console.Write("Сгенерированные числа: ");
            for (int i = 0; i < size; i++) {
                _myArray[i] = (byte)rand.Next(1, 101);
                Console.Write(_myArray[i] + " ");
            }
            Console.WriteLine();
            
            byte rez = Summa(_myArray);
            Console.WriteLine("Результат: " + rez);
        }

        public static byte Summa(byte[] digits) {
            byte nums = 0;
            foreach (byte el in digits) {
                nums += el;
            }
            return nums;
        }
    }
}
